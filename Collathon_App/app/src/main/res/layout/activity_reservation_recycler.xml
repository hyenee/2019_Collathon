<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.collathon.jamukja.customer.reservation.ReservationActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 시간 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="시간"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text=""
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/timeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="#EE7764"
                    android:fontFamily="@font/nanumsquare"
                    android:text="시간"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />
            </LinearLayout>

            <!-- 메뉴 이름, 메뉴 가격, 남은 수량, 구매 수량 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nanumsquare"
                    android:text="메뉴이름"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:fontFamily="@font/nanumsquare"
                    android:text="메뉴가격"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="230dp"
                    android:fontFamily="@font/nanumsquare"
                    android:text="남은 수량"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="330dp"
                    android:fontFamily="@font/nanumsquare"
                    android:text="구매 수량"
                    android:textSize="17sp" />
            </RelativeLayout>

            <!-- 리사이클러 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reservation_recycler"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumsquare"
                app:layout_constraintTop_toBottomOf="@+id/decisionMenuButton"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare"
                    android:text="주문내역"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/order_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dip"
                    android:fontFamily="@font/nanumsquare"
                    android:text=""
                    android:textSize="16dp" />
            </RelativeLayout>

            <!-- 테이블 선택 -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="테이블 인원"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="잔여"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:padding="20sp"
                        android:text="개수"
                        android:textSize="16dp" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="1인"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/table_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="0개"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/number_table_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="16dp" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="2인"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/table_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="0개"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/number_table_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="16dp" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="4인"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/table_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="0개"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/number_table_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="16dp" />

                </TableRow>

            </TableLayout>

            <!-- 예약하기 버튼 -->
            <Button
                android:id="@+id/reserveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#EE7764"
                android:fontFamily="@font/nanumsquare"
                android:text="예약하기"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>