<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    tools:context="com.collathon.jamukja.customer.store.pick.PickStoreActivity">


    <TextView
        android:id="@+id/pick"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/typo"
        android:textColor="#EE7764"
        android:text="찜목록"
        android:gravity="center"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pick_store_recycler"
        android:layout_width="409dp"
        android:layout_height="604dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nanumsquare"
        app:layout_constraintTop_toBottomOf="@+id/pick"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>