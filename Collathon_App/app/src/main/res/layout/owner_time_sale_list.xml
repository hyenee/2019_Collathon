<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.collathon.jamukja.owner.TimeSale.TimeSaleAdd.TimeSaleActivity">
    <!--tools:showIn="@layout/owner_time_sale_list"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_sale_shopName"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:fontFamily="@font/typo"
            android:gravity="center"
            android:hint="shopName"
            android:textAlignment="viewEnd"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/typo"
            android:gravity="center"
            android:text="타임세일"
            android:textColor="#EE7764"
            android:textSize="25dp" />

    </LinearLayout>


    <!-- 시간 선택 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/timesale_timeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="00:00-00:00"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/timesale_timeButton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="#EE7764"
            android:fontFamily="@font/nanumsquare"
            android:text="시간 선택"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 시간 선택 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/timesale_percentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="0%"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/timesale_percentButton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="#EE7764"
            android:fontFamily="@font/nanumsquare"
            android:text="할인율 선택"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="8"
        android:fillViewport="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/timeSaleListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:choiceMode="multipleChoice"></ListView>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/selectAll"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EE7764"
            android:fontFamily="@font/nanumsquare"
            android:textColor="#ffffff"
            android:text="전체 선택" />


        <Button
            android:id="@+id/timesale_saveButton"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EE7764"
            android:fontFamily="@font/nanumsquare"
            android:textColor="#ffffff"
            android:text="등록" />

    </LinearLayout>

</LinearLayout>
