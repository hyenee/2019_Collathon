<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.collathon.janolja" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 외부 메모리 사용 permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 구글 서비스 사용 permission -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- 고객/자영업자 구분하는 것이 시작페이지 -->
        <activity
            android:name="com.collathon.jamukja.IntroActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.collathon.jamukja.SelectUserActivity"
            android:theme="@style/AppTheme.NoActionBar2" />

        <activity
            android:name="com.collathon.jamukja.MainActivity"
            android:theme="@style/AppTheme.NoActionBar2"
            android:label="@string/app_name" />

        <!-- 로그인 : 고객, 자영업자 -->
        <activity android:name="com.collathon.jamukja.LoginCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity android:name="com.collathon.jamukja.LoginOwnerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />

        <!-- 회원가입 : 고객, 자영업자 -->
        <activity android:name="com.collathon.jamukja.RegisterCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity android:name="com.collathon.jamukja.RegisterOwnerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />

        <!-- 고객 관점 -->
        <!-- (고객) 마이 메뉴 -->
        <activity android:name="com.collathon.jamukja.customer.user_info.customer.CustomerMyMenuActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.customer.user_info.customer.CustomerInfoActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 가게 리스트 -->
        <activity android:name="com.collathon.jamukja.customer.store.category.list.StoreListActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.customer.store.category.list.StoreListViewActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 가게 상세정보 -->
        <!-- 가게 별 메뉴 리스트 -->
        <activity android:name="com.collathon.jamukja.customer.store.category.detail.StoreDetailMenuViewActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.customer.store.category.detail.StoreDetailListActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <!-- 가게 상세정보 -> 정보 -->
        <activity android:name="com.collathon.jamukja.customer.store.category.detail.StoreDetailInfoActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 예약 확인 : 자리예약, 모바일 번호표 -->
        <activity android:name="com.collathon.jamukja.customer.reservation.ReservationSeatConfirmActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.customer.reservation.ReservationTicketConrifmActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>




        <!-- 자영업자 관점 -->
        <activity android:name="com.collathon.jamukja.owner.MainOwnerActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.owner.Store_info"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.owner.item_view_menu"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.owner.item_view_store"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.owner.Menu_Register"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.owner.Menu_remove"
            android:theme="@style/AppTheme.NoActionBar2"/>

    </application>

</manifest>