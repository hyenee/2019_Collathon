<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.collathon.janolja" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- 고객/자영업자 구분하는 것이 시작페이지 -->
        <activity
            android:name="com.collathon.jamukja.SelectUserActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.collathon.jamukja.MainActivity"
            android:theme="@style/AppTheme.NoActionBar2"
            android:label="@string/app_name" />

        <!-- 로그인 : 고객, 자영업자 -->
        <activity android:name="com.collathon.jamukja.LoginCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity android:name="com.collathon.jamukja.LoginOwnerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />

        <!-- 회원가입 : 고객, 자영업자 -->
        <activity android:name="com.collathon.jamukja.RegisterCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity android:name="com.collathon.jamukja.RegisterOwnerActivity"
            android:theme="@style/AppTheme.NoActionBar2" />

        <!-- (고객) 마이 메뉴 -->
        <activity android:name="com.collathon.jamukja.user_info.customer.CustomerMyMenuActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.user_info.customer.CustomerInfoActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 가게 리스트 -->
        <activity android:name="com.collathon.jamukja.store.category.list.StoreListActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.store.category.list.StoreItemViewActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 가게 상세정보 -->
        <activity android:name="com.collathon.jamukja.store.category.detail.StoreDetailListActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.store.category.detail.StoreDetailMenuActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 가게 상세정보 -->
        <activity android:name="com.collathon.jamukja.store.StoreDetailActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.store.StoreDetailInfoActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>

        <!-- 예약 확인 : 자리예약, 모바일 번호표 -->
        <activity android:name="com.collathon.jamukja.reservation.ReservationSeatConfirmActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity android:name="com.collathon.jamukja.reservation.ReservationTicketConrifmActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
    </application>

</manifest>