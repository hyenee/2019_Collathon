<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.collathon.jamukja.customer.user_info.customer.CustomerMyMenuActivity">

        <TextView
            android:id="@+id/my_topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nanumsquare2"
            android:text="마이 메뉴"
            android:textColor="#45555f"
            android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#49575f" />

            <TextView
                android:id="@+id/customer_info"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare"
                android:textColor="#49575f"
                android:text="회원 정보>"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/reservation_seat_confirm"
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:fontFamily="@font/nanumsquare"
                android:textColor="#49575f"
                android:layout_height="wrap_content"
                android:text="자리 예약 확인>"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/reservation_ticket_confirm"
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:fontFamily="@font/nanumsquare"
                android:textColor="#49575f"
                android:layout_height="wrap_content"
                android:text="번호표 확인>"
                android:textSize="20dp" />



        </LinearLayout>

    </LinearLayout>
</LinearLayout>